<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendedCoursesPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-68dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            app:srcCompat="@drawable/osu_logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Below are the courses you can take next semester:"
            android:textSize="17dp" />

        <ListView
            android:id="@+id/RecommendedCourses"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/textview_border">


        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/btnReturnToHomepage"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FF5722"
            android:onClick="yourButtonReturn"
            android:text="Update your progress"
            android:textSize="18sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>